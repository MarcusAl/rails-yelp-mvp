<div class="container mx-auto mt-3">
  <div class="card bg-light bg-gradient border border-3">
    <div class="card-body">
      <h5 class="card-title"><%= @restaurant.name %></h5>
      <p class="card-text"><%= @restaurant.address %></p>
      <p class="card-text"><%= @restaurant.phone_number %></p>
      <p class="card-text"><%= @restaurant.category%></p>
      <p class="card-text"><small class="text-muted"><%= (@restaurant.created_at).strftime("Created on %m/%d/%Y at %H:%M")%></small></p>
      <p class="card-text"><small class="text-muted"><%= (@restaurant.updated_at).strftime("Updated on %m/%d/%Y at %H:%M")%></small></p>
    </div>
    <img class="card-img-bottom" src="..." alt="Card image cap">
  </div>
</div>

